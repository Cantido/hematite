meta {
  name: Create event
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/streams/asdf/events
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  [{
      "specversion" : "1.0",
      "type" : "com.example.someevent",
      "source" : "/mycontext",
      "id" : "{{uuid}}",
      "time" : "2018-04-05T17:31:00Z",
      "data" : "data!"
  }]
}

script:pre-request {
  const { v4 } = require('uuid');
  
  bru.setVar("uuid", v4());
}
